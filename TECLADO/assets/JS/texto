  if (event.key === 't' && !isTPressed) {
    sol.currentTime = 0;
    sol.play();
    isTPressed = true;
  }
}); 

document.addEventListener('keyup', (event) => {
  if (event.key === 't' && isTPressed) {
    sol.pause();
    isTPressed = false;
  }
