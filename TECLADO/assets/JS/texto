const doo = new Audio('assets/audio/do.mp3');
const re = new Audio('assets/audio/re.mp3');
const mi = new Audio('assets/audio/mi.mp3');
const fa = new Audio('assets/audio/fa.mp3');
const sol = new Audio('assets/audio/sol.mp3');
const la = new Audio('assets/audio/la.mp3');
const si = new Audio('assets/audio/si.mp3');
let isQPressed = false;
let isWPressed = false;
let isEPressed = false;
let isRPressed = false;
let isTPressed = false;
let isYPressed = false;
let isUPressed = false;

document.addEventListener('keydown', (event) => {
  if (event.key === 'q' && !isQPressed) {
    doo.currentTime = 0;
    doo.play();
    isQPressed = true;
  }
}); 

document.addEventListener('keyup', (event) => {
  if (event.key === 'q' && isQPressed) {
    doo.pause();
    isQPressed = false;
  }
});

doo.addEventListener('ended', () => {
  isQPressed = false;
});

document.addEventListener('keydown', (event) => {
  if (event.key === 'w' && !isWPressed) {
    re.currentTime = 0;
    re.play();
    isWPressed = true;
  }
}); 

document.addEventListener('keyup', (event) => {
  if (event.key === 'w' && isWPressed) {
    re.pause();
    isWPressed = false;
  }
});

re.addEventListener('ended', () => {
  isWPressed = false;
});

